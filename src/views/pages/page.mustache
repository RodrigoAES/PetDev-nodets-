{{>partials/header}}

{{#banner}}
    <section class="banner" style="background-image: url('images/{{image}}')">{{title}}</section>
    <h2>{{title}} disponíveis para adoção</h2>
{{/banner}}
<div class="container list">
    {{#pets}}
        <div class="item">
            <img src="images/{{image}}" class="item--image" />
            <div class="item--name">{{name}}</div>
            <div class="item--color">Cor: {{color}}</div>
            <div class="item--genre">Gênero: {{sex}}</div>
        </div>
    {{/pets}}
</div>
{{^pets}}
    <div class="container no-pets">
        <h2>Não há animais disponíveis nestas condições</h2>
    </div>
{{/pets}}

{{>partials/footer}}